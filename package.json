{
  "name": "sanitize-db",
  "version": "1.0.0",
  "description": "Sanitize databases",
  "main": "src/main.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/main.js",
    "serve": "nodemon",
    "build": "rimraf build && tsc",
    "postbuild": "npm run copy:public && npm run copy:views && npm run copy:assets",
    "format": "prettier --write \"src/**/*.{ts,json,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,js}\"",
    "copy:public": "copyfiles -e \"**/*.ts\" -u 2 src/public/**/* build/public && echo Copied public folder",
    "copy:views": "copyfiles -f src/views/** build/views && echo Copied views folder",
    "copy:assets": "copyfiles -f src/assets/** build/assets && echo Copied assets folder"
  },
  "keywords": [
    "express",
    "ts",
    "typescript",
    "boilerplate"
  ],
  "author": {
    "name": "Cristian Santiz",
    "email": "crisantizan@gmail.com",
    "url": "https://cristiansantiz.netlify.com"
  },
  "license": "MIT",
  "_moduleAliases": {
    "@": "build/"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.1",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.3",
    "@types/mysql2": "types/mysql2",
    "@types/serve-favicon": "^2.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "compression": "^1.7.4",
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "helmet": "^3.21.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "pug": "^3.0.1",
    "serve-favicon": "^2.5.0"
  }
}
