{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Express + TypeScript Boilerplate",
  "main": "src/main.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/main.js",
    "serve": "nodemon",
    "build": "rimraf build && tsc && npm run copy:assets",
    "format": "prettier --write \"src/**/*.{ts,json,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,js}\"",
    "copy:assets": "cpx 'src/assets/**' 'build/assets'"
  },
  "keywords": [
    "express",
    "ts",
    "typescript",
    "boilerplate"
  ],
  "author": {
    "name": "Cristian Santiz",
    "email": "crisantizan@gmail.com",
    "url": "https://cristiansantiz.netlify.com"
  },
  "license": "MIT",
  "_moduleAliases": {
    "@": "build/"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "cpx": "^1.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.9.1"
  }
}
